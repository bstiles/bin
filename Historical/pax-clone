if [ -z "${PAX_CONSTRUCT_VERSION}" ]
then
  PAX_CONSTRUCT_VERSION=1.4
fi

PAX_PLUGIN=org.ops4j:maven-pax-plugin:${PAX_CONSTRUCT_VERSION}

unset _OVERWRITE_

while
  getopts oh- _SETTING_
do
  case ${_SETTING_} in
    h|\?) echo "pax-clone [-o] [-- mvnOpts ...]"
          echo "@ http://www.ops4j.org/projects/pax/construct/help/clone.html"
          exit ;;

    o) _OVERWRITE_=-Doverwrite ;;

    -) break ;;
  esac
done

shift $((${OPTIND}-1))

exec mvn  ${PAX_PLUGIN}:clone \
  ${PAX_CONSTRUCT_OPTIONS} ${_OVERWRITE_} "$@"

