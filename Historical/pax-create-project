if [ -z "${PAX_CONSTRUCT_VERSION}" ]
then
  PAX_CONSTRUCT_VERSION=1.4
fi

PAX_PLUGIN=org.ops4j:maven-pax-plugin:${PAX_CONSTRUCT_VERSION}

unset _GROUPID_
unset _ARTIFACTID_
unset _VERSION_
unset _OVERWRITE_

while
  getopts g:a:v:oh- _SETTING_
do
  case ${_SETTING_} in
    h|\?) echo "pax-create-project -g groupId -a artifactId [-v version] [-o] [-- mvnOpts ...]"
          echo "@ http://www.ops4j.org/projects/pax/construct/help/create-project.html"
          exit ;;

    g) _GROUPID_=${OPTARG} ;;
    a) _ARTIFACTID_=${OPTARG} ;;
    v) _VERSION_=${OPTARG} ;;
    o) _OVERWRITE_=-Doverwrite ;;

    -) break ;;
  esac
done

shift $((${OPTIND}-1))

if [ -z "${_GROUPID_}" ] || [ -z "${_ARTIFACTID_}" ]
then
  PAX_PROMPT=true
fi

_GROUPID_=${_GROUPID_:-examples}
_ARTIFACTID_=${_ARTIFACTID_:-myProject}
_VERSION_=${_VERSION_:-1.0-SNAPSHOT}

if [ -n "${PAX_PROMPT}" ]
then
  echo
  echo "pax-create-project -g groupId -a artifactId [-v version] [-o] [-- mvnOpts ...]"
  echo

  unset _INPUT_
  read -p "groupId (${_GROUPID_}) ? " _INPUT_
  _GROUPID_=${_INPUT_:-${_GROUPID_}}

  unset _INPUT_
  read -p "artifactId (${_ARTIFACTID_}) ? " _INPUT_
  _ARTIFACTID_=${_INPUT_:-${_ARTIFACTID_}}

  unset _INPUT_
  read -p "version (${_VERSION_}) ? " _INPUT_
  _VERSION_=${_INPUT_:-${_VERSION_}}

  echo
fi

exec mvn -N ${PAX_PLUGIN}:create-project \
  "-DgroupId=${_GROUPID_}" \
  "-DartifactId=${_ARTIFACTID_}" \
  "-Dversion=${_VERSION_}" \
  ${PAX_CONSTRUCT_OPTIONS} ${_OVERWRITE_} "$@"

