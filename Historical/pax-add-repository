if [ -z "${PAX_CONSTRUCT_VERSION}" ]
then
  PAX_CONSTRUCT_VERSION=1.4
fi

PAX_PLUGIN=org.ops4j:maven-pax-plugin:${PAX_CONSTRUCT_VERSION}

unset _REPOSITORYID_
unset _REPOSITORYURL_
unset _OVERWRITE_

while
  getopts i:u:oh- _SETTING_
do
  case ${_SETTING_} in
    h|\?) echo "pax-add-repository -i repositoryId -u repositoryURL [-o] [-- mvnOpts ...]"
          echo "@ http://www.ops4j.org/projects/pax/construct/help/add-repository.html"
          exit ;;

    i) _REPOSITORYID_=${OPTARG} ;;
    u) _REPOSITORYURL_=${OPTARG} ;;
    o) _OVERWRITE_=-Doverwrite ;;

    -) break ;;
  esac
done

shift $((${OPTIND}-1))

if [ -z "${_REPOSITORYID_}" ] || [ -z "${_REPOSITORYURL_}" ]
then
  PAX_PROMPT=true
fi

_REPOSITORYID_=${_REPOSITORYID_:-ops4j.releases}
_REPOSITORYURL_=${_REPOSITORYURL_:-http://repository.ops4j.org/maven2/}

if [ -n "${PAX_PROMPT}" ]
then
  echo
  echo "pax-add-repository -i repositoryId -u repositoryURL [-o] [-- mvnOpts ...]"
  echo

  unset _INPUT_
  read -p "repositoryId (${_REPOSITORYID_}) ? " _INPUT_
  _REPOSITORYID_=${_INPUT_:-${_REPOSITORYID_}}

  unset _INPUT_
  read -p "repositoryURL (${_REPOSITORYURL_}) ? " _INPUT_
  _REPOSITORYURL_=${_INPUT_:-${_REPOSITORYURL_}}

  echo
fi

exec mvn -N ${PAX_PLUGIN}:add-repository \
  "-DrepositoryId=${_REPOSITORYID_}" \
  "-DrepositoryURL=${_REPOSITORYURL_}" \
  ${PAX_CONSTRUCT_OPTIONS} ${_OVERWRITE_} "$@"

