if [ -z "${PAX_CONSTRUCT_VERSION}" ]
then
  PAX_CONSTRUCT_VERSION=1.4
fi

PAX_PLUGIN=org.ops4j:maven-pax-plugin:${PAX_CONSTRUCT_VERSION}

unset _BUNDLENAME_
unset _OVERWRITE_

while
  getopts n:oh- _SETTING_
do
  case ${_SETTING_} in
    h|\?) echo "pax-remove-bundle -n bundleName [-o] [-- mvnOpts ...]"
          echo "@ http://www.ops4j.org/projects/pax/construct/help/remove-bundle.html"
          exit ;;

    n) _BUNDLENAME_=${OPTARG} ;;
    o) _OVERWRITE_=-Doverwrite ;;

    -) break ;;
  esac
done

shift $((${OPTIND}-1))

if [ -z "${_BUNDLENAME_}" ]
then
  PAX_PROMPT=true
fi

_BUNDLENAME_=${_BUNDLENAME_:-myBundle}

if [ -n "${PAX_PROMPT}" ]
then
  echo
  echo "pax-remove-bundle -n bundleName [-o] [-- mvnOpts ...]"
  echo

  unset _INPUT_
  read -p "bundleName (${_BUNDLENAME_}) ? " _INPUT_
  _BUNDLENAME_=${_INPUT_:-${_BUNDLENAME_}}

  echo
fi

exec mvn -N ${PAX_PLUGIN}:remove-bundle \
  "-DbundleName=${_BUNDLENAME_}" \
  ${PAX_CONSTRUCT_OPTIONS} ${_OVERWRITE_} "$@"

